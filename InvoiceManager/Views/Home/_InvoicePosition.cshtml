@model IEnumerable<InvoiceManager.Models.Domains.InvoicePosition>

<div class="row">

    <table class="table table-hover table-striped mt-3 mb-5">
        <thead>
            <tr>
              <th><h2>Invoice Positions</h2></th>
            </tr>
            <tr>
                <th scole="col">Nr</th>
                <th scole="col">Product</th>
                <th scole="col">Quantity</th>
                <th scole="col">Value</th>
                <th scole="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var position in Model)
            {
                <tr>
                    <td>
                        <a href=
                           "@Url.Action("InvoicePosition", "Home", new {invoiceId = position.InvoiceId, invoicePositionId = position.Id})" 
                           class="font-weight-bold">

                            @position.Nr
                        </a>
                    </td>
                    <td>
                        @position.Product.Name
                    </td>
                    <td>
                        @position.Quantity
                    </td>
                    <td>
                        $ @position.Value
                    </td>
                    <td>
                        <button class="btn btn-danger btn-sm" onclick="deleteInvoicePosition('@position.Id', '@position.InvoiceId', this);">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>







